# Convert binary numbers (2진수) to decimal (10진수)
print('10진수(01000001)={0}'.format(0b01000001))
# Convert binary numbers to hexadecimal (16진수)
print('16진수(01000001)={0}'.format(hex(0b01000001)))
# Treat binary numbers as characters
print('16진수(01000001)={0}'.format(chr(0b01000001)))
print()

# Original text
text = "안녕하세요"
# Encoding the text in EUC-KR format
encoded_text = text.encode('euc-kr')
# Convert to hexadecimal representation
hex_representation = encoded_text.hex()
# Convert to decimal representation
decimal_representation = [byte for byte in encoded_text]
# Convert to binary representation
binary_representation = ' '.join(format(byte, '08b') for byte in encoded_text)

# Print the results
print("Encoded Text:", encoded_text)
print("Hexadecimal Representation:", hex_representation)
print("decimal Representation:", decimal_representation)
print("Binary Representation:", binary_representation)

