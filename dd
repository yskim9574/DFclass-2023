import cv2
import numpy as np
import matplotlib.pyplot as plt

# Load the color image
image_path = 'yskim.jpg'
color_image = cv2.imread(image_path)

# Check if the image was loaded correctly
if color_image is None:
    print("Error loading the image")
else:
    # Apply a stronger Gaussian blur to the color image
    low_pass_image = cv2.GaussianBlur(color_image, (15, 15), 0)

    # Convert the image from BGR (OpenCV format) to RGB (matplotlib format)
    color_image_rgb = cv2.cvtColor(color_image, cv2.COLOR_BGR2RGB)
    low_pass_image_rgb = cv2.cvtColor(low_pass_image, cv2.COLOR_BGR2RGB)

    # Show the original image and the image with the low pass filter
    plt.figure(figsize=(10, 5))

    plt.subplot(1, 2, 1)
    plt.imshow(color_image_rgb)
    plt.title('Original Image')
    plt.axis('off')

    plt.subplot(1, 2, 2)
    plt.imshow(low_pass_image_rgb)
    plt.title('Low-Pass Filtered Image')
    plt.axis('off')

    plt.show()
